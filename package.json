{
	"name": "action-eslint",
	"version": "1.0.0",
	"description": "TypeScript/JavaScript ESLint action",
	"main": "dist/index.js",
	"author": "iCrawl <icrawltogo@gmail.com>",
	"license": "UNLICENSED",
	"private": true,
	"scripts": {
		"prebuild": "yarn lint",
		"build": "ncc build src/main.ts --minify",
